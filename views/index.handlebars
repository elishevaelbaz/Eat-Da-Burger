
<div class="container">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">

        
<h1 id="title">Burgers!</h1>
</div>

</div>

<div class="row">
<div class="col-md-6">

    <div class="uneaten">
        <h2>Burgers that are not eaten!</h2>

        
      
        {{#each burgers}}
            {{#unless devoured}}
            <p>
            
            {{this.id}}. {{burger_name}}

      
            <button class="eat-burger" data-id="{{id}}" >
                EAT THE BURGER!
            </button>

            </p>
            
            {{/unless}}
        {{/each}}
        
    </div>

    </div>

<div class="col-md-6">
    <div class="eaten">
        <h2>Burgers that are eaten!</h2>

        
        {{#each burgers}}
            {{#if devoured}}
            <p>
             {{this.id}}. {{burger_name}}
            </p>

            
            {{/if}}
        {{/each}}
        
    </div>
    </div>
{{!-- close the row --}}
    </div>

<div class="col-md-6 col-md-offset-3">
    <div class="add-new">
        <h2>Add a Burger</h2>
        <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
        </div>



        <button class="btn btn-primary" type="submit">Add Burger</button>
        </form>
    </div>
    </div>


</div> 
